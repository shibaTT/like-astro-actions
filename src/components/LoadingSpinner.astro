---
interface Props {
    size?: "sm" | "md" | "lg"
}

const { size = "md" } = Astro.props

const sizeClasses = {
    sm: "h-4 w-4",
    md: "h-8 w-8",
    lg: "h-12 w-12",
}
---

<div class="flex justify-center">
    <div class={`animate-spin rounded-full border-t-2 border-b-2 border-gray-900 ${sizeClasses[size]}`}></div>
</div>
